<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    tools:context=".ui.activities.MainActivity"    android:id="@+id/main_activity_layout">    <FrameLayout        android:layout_width="match_parent"        android:layout_height="450dp"        android:id="@+id/main_container">    </FrameLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_gravity="bottom|end">        <Button            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:id="@+id/btn_fetch"            android:layout_margin="8dp"            android:text="Fetch"/>        <Button            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:id="@+id/btn_details"            android:layout_margin="8dp"            android:layout_alignParentRight="true"            android:text="Details"/>    </RelativeLayout></RelativeLayout>