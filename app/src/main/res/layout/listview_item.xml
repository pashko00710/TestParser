<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="horizontal"    android:layout_width="match_parent"    android:layout_height="wrap_content">        <android.support.v7.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content">        <TextView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:id="@+id/people_name"            android:layout_weight="1"            android:textSize="@dimen/nameTextSize"            android:textColor="@color/colorBlack"            android:layout_margin="10dp">        </TextView>        <View            android:id="@+id/selected_overlay"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/selected_color"            android:alpha="0.2"            android:visibility="invisible"/>        </android.support.v7.widget.CardView></LinearLayout>